<div class="p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/cards/add" method="POST" autocomplete="off">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Name" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="img_url" class="form-control" placeholder="URL logo">
                        </div>
                        <div class="form-group">
                            <input name="description" rows="2" class="form-control" placeholder="Description">
                        </div>
                         <div class="form-group">
                            <input type="text" name="app_url_download" class="form-control" placeholder="URL file" required>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary btn-block" type="reset" value="Reset">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>