<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/cards/edit/{{card.id}}" method="POST">
                <div class="form-group">
                    <input id="name" type="text" name="name" class="form-control" placeholder="Name" value="{{card.name}}" autofocus required>
                </div>
                <div class="form-group">
                    <input type="img_url" name="img_url" class="form-control" placeholder="URL logo" value="{{card.img_url}}">
                </div>
                <div class="form-group">
                    <input name="description" rows="2" class="form-control" placeholder="Description" value="{{card.description}}">
                </div>
                <div class="form-group">
                    <input name="app_url_download" rows="2" class="form-control" placeholder="URL file" value="{{card.app_url_download}}" required>
                </div>
                <div class="form-group">
                   <a class="btn btn-secondary btn-block" href="/cards"> Cancel </a>
                 </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="reset" value="Reset">
                 </div>
                    <div class="form-group">
                 <button class="btn btn-success btn-block"> Modify </button>
            </form>
        </div>
    </div>
</div>